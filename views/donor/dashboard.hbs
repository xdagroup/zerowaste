
<nav class="navbar navbar-light bg-danger">
    <span class="navbar-brand mb-0 h1">Donor Dashboard</span>
    <a href='/logout' class="btn btn-danger">Logout</a>
</nav>

<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Total Food</th>
            <th scope="col">Waste Food</th>
            <th scope="col">Pickup Time</th>
            <th scope="col">Image</th>
            <th scope="col">Status</th>
           
        </tr>
    </thead>
    <tbody>
       
        {{#each response}}
        <tr>
            <th scope="row">{{@index}}</th>
            <td>{{this.totalFoodCooked}}</td>
            <td>{{this.foodWasteQty}}</td>
            <td>{{this.pickUpTime}}</td>
            <td><img style="width:100px;height:100px;" src="/food-images/{{this._id}}.jpg" class="image-food"></td>
            <td>{{this.status}}</td>
            {{#if this.status}}
            <td><a href="/profile/{{this.acceptorId}}" class="btn btn-primary">Acceptor Profile</a></td>
           {{else}}
           <td><a href='/donor/edit-product/{{this._id}}' class="btn btn-success">Edit</a>
                <a href="/donor/delete-food/{{this._id}}" class="btn btn-danger"
                                    onClick="return confirm('Do you want to delete?')">Delete</a></td>

           {{/if}}
           
        </tr>
        {{/each}}

    </tbody>
</table>