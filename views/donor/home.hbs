<form action="donor/addfood" method="post">
    <div class="form-group">
        <label class="input_title">Total Food Cooked</label>
        <input type='text' name='totalFoodCooked' id='totalFoodCooked' required="required" >
    </div>
    <div class="form-group">
        <label class="input_title">Wasted Food Quantity</label>
        <input type='text' name='foodWasteQty' required="required">
    </div>
    <div class="form-group">
        <label class="input_title">Food Pickup Time</label>
        <input type="datetime-local" name='pickUpTime' id='pickUpTime' required="required">
    </div>
    <button>Submit</button>
</form>

