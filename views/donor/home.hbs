<header class="header-area">
    <div class="navbar-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg">
                        <a class="navbar-brand" href="index.html">
                            <img src="/assets/images/logo.svg" alt="Logo">
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse"
                            data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                            <ul id="nav" class="navbar-nav ml-auto">
                                <li class="nav-item active">
                                    <a class="page-scroll" href="#home">Home</a>
                                </li>
                            
                            </ul>
                        </div> <!-- navbar collapse -->
                        
                        <div class="navbar-btn d-none d-sm-inline-block">
                            <a class="main-btn" data-scroll-nav="0" href="/logout" rel="nofollow">LOGOUT</a>
                        </div>
                    </nav> <!-- navbar -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </div> <!-- navbar area -->
    <div id="home" class="header-hero bg-image" style="background-image: url(/assets/images/banner-bg.svg)">
        <div class="container">
            <div class="row">

                <div class="col-12">

                    <div class="page-content">
                        <div class="home-head col-12 col-md-10">
                            <p class="user-name">Hi {{user.name}}</p>
                            <a class="main-btn" data-scroll-nav="0" href="donor/list" rel="nofollow">DASHBOARD</a>
                        </div>
                        <p class="page-head">DONATE FOOD</p>

                        <form class="col-12 col-md-6 col-lg-4" action="donor/addfood" method="post" enctype="multipart/form-data">
                            {{#if donorMessage}}
                            <p class="form-message">{{donorMessage}}</p>
                            {{/if}}
                            <div class="form-group">
                                <label class="form-label">Total Food Cooked</label>
                                <input type='text' class="form-control" name='totalFoodCooked' id='totalFoodCooked' required="required">
                            </div>
                            <div class="form-group">
                                <label class="form-label">Wasted Food Quantity</label>
                                <input type='text' class="form-control" name='foodWasteQty' required="required">
                            </div>
                            <div class="form-group">
                                <label class="form-label">Food Pickup Time</label>
                                <input type="datetime-local" class="form-control" name='pickUpTime' id='pickUpTime' required="required">
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="">Image</label>
                                <input type="file" class="form-control upload-btn" name="image" class="form-control">
                                
                            </div>
                        <div class="form-group">
                                <button type="submit" class="main-btn mt-2">Submit</button>
                        </div>
                            
                        </form>
                    </div> <!-- header hero content -->
                </div>
            </div> <!-- row -->
          
        </div> <!-- container -->
        <div id="particles-1" class="particles"></div>
    </div> <!-- header hero -->
</header>