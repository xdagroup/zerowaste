<header class="header-area">
    <div class="navbar-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg">
                        <a class="navbar-brand" href="/">
                            <img src="/assets/images/logo.svg" alt="Logo">
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                        </button>
                    
                        <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                            <ul id="nav" class="navbar-nav ml-auto">
                                <li class="nav-item active">
                                    <a class="page-scroll" href="/">Home</a>
                                </li>
                        
                                <li class="nav-item">
                    
                                    <a class="login-btn" data-scroll-nav="0" href="/signup">
                                        <p class="login-btn-text">SIGNUP</p>
                                    </a>
                    
                                </li>
                    
                            </ul>
                        </div> <!-- navbar collapse -->
                    
                    </nav>
                        </div>
                        </div> <!-- row -->
                        </div> <!-- container -->
                        </div> <!-- navbar area -->
                        <div id="home" class="header-hero bg-image"
                            style="background-image: url(/assets/images/banner-bg.svg)">
                            <div class="container">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="login-form">
                                            <p class="page-head">LOGIN</p>
                                            <form class="col-12 col-md-6 col-lg-4" action="/login" method="POST">
                                                {{#if loginErr}}
                                                <p class="form-message">{{loginErr}}</p>
                                                {{/if}}
                                                <div class="form-group ">
                                                    <label class="form-label">Email address</label>
                                                    <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp"
                                                        placeholder="Enter email">
                                                    <small class="small-form-label">We'll never share your email with anyone else.</small>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label">Password</label>
                                                    <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password">
                                                </div>
                                                <a class="loginform-link" href="/signup">Create an account?</a>
                                            
                                                <button type="submit" class="main-btn">Login</button>
                                            </form>
                                        </div> <!-- header hero content -->
                                    </div>
                                </div> <!-- row -->
